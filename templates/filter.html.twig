{% extends 'base.html.twig' %} {% block title %}Events of {{ eventType }} type{%
endblock %} {% block body %}

<div class="container">
  <h1 style="text-align: center">{{ eventType }} events</h1>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    {% for event in events %}
    <div class="col p-3">
      <div class="card" style="width: 18rem; height: 25rem">
        <img src='{{ asset('uploads/' ~ event.image) }}' class='card-img-top'
        alt='...'>
        <div class="card-body">
          <h5 class="card-title">{{ event.name }}</h5>
          <p class="card-text" style="height: 24px">
            {{ event.date ? event.date|date('Y-m-d H:i:s') : '' }}
          </p>
          <p class="card-text" style="height: 48px">{{ event.description }}</p>
          <div class="btnbottom">
            <div class="btnAlign">
              <a
                class="btn btn-success"
                href="{{ path('app_events_show', { id: event.id }) }}"
                >show</a
              >
              <a
                class="btn btn-warning"
                href="{{ path('app_events_edit', { id: event.id }) }}"
                >edit</a
              ><a
                class="btn btn-secondary"
                href="{{ path('app_filter', { eventType: event.eventType }) }}"
                >{{ event.eventType }}</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>
    {% else %}
    <div class="col">
      <h5>no records found</h5>
    </div>
    {% endfor %}
  </div>
  <div class="btnAlign">
    <a class="btn btn-primary" href="{{ path('app_events_new') }}"
      >Create new</a
    >
    <a class="btn btn-warning" href="{{ path('app_events_index') }}">go back</a>
  </div>
</div>

{% endblock %}
